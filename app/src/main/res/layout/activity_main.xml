<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
                android:id="@+id/root">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_text"
        android:id="@+id/textViewMain"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size Up"
        android:id="@+id/buttonSizeUp"
        android:layout_above="@+id/buttonSizeDown"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonSizeDown"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size Down"
        android:id="@+id/buttonSizeDown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angle"
        android:id="@+id/textViewAngle"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buttonSizeDown"
        android:layout_toEndOf="@+id/buttonSizeDown"
        android:layout_below="@+id/buttonCalibrate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_above="@+id/buttonSizeUp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonSizeUp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_alignEnd="@+id/textViewAngle"
        android:layout_toEndOf="@+id/textViewMain"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibrate"
        android:id="@+id/buttonCalibrate"
        android:layout_above="@+id/buttonReset"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button_start"
        android:layout_above="@+id/buttonCalibrate"
        android:layout_alignParentStart="true" />

</RelativeLayout>
